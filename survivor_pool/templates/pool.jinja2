{% extends "layout.jinja2" %}
{% block body %}
    <h1>NFL 2016 pool</h1>
    <h2>Prize pool: 1 Million Bitcoins!</h2>
    <div class='row'>
        <div class='col-md-6'>
            <h2>Surviving</h2>
            {% for user in users %}
                {% if user.isalive %}
                    {% if request.authenticated_userid == user.username %}
                        <p><b>{{ user.username }}</b><br>
                    {% else %}
                        <p>{{ user.username }}<br>
                    {% endif %}
                    Week {{ week }} selection: {{ user.teamname }}</p>
                {% endif %}
            {% endfor %}
        </div>
        <div class='col-md-6'>
            <h2>Eliminated</h2>
            {% for user in users %}
                {% if not user.isalive %}
                    {% if request.authenticated_userid == user.username %}
                        <p><b>{{ user.username }}</b></p>
                    {% else %}
                        <p>{{ user.username }}</p>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}



