<!DOCTYPE html>
<html>
<head>
    <title>Survivor pool</title>
    <base href="/">
    <!-- Bootstrap CSS CDN-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <!-- Font Awsome CDN-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- External CSS -->
    <link href="{{request.static_url('survivor_pool:static/css/base.css')}}" rel="stylesheet">
    <link href="{{request.static_url('survivor_pool:static/css/layout.css')}}" rel="stylesheet">
    <link href="{{request.static_url('survivor_pool:static/css/module.css')}}" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>

    <!-- JQuery CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <!-- Bootstrap JS CDN -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<div id="top"></div>
    <!-- navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><img id="logo" src="../static/img/logo.png"></a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item nav-hover" id='nav-home'><a href="/"><i class="fa fa-lg fa-home"></i> Home</a></li>
                    {% if request.authenticated_userid %}
                        <li class="nav-item nav-hover" id='nav-pool'><a href="/pool"><i class="fa fa-lg fa-trophy"></i> Pool</a></li>
                        <li class="nav-item nav-hover" id='nav-pick'><a href="pick/week1"><i class="fa fa-lg fa-check-square-o"></i> Pick</a></li>
                    {% endif %}
                    <li class="nav-item nav-hover" id='nav-about'><a href="/about"><i class="fa fa-lg fa-info-circle"></i> About</a></li>
                </ul>
                    <ul class="nav navbar-nav navbar-right">
                    {% if request.authenticated_userid %}
                        <li class="nav-item" id="welcome">Welcome {{ request.authenticated_userid }}</li>
                        <li class="nav-item nav-hover"><a href="/logout"><i class="fa fa-lg fa-sign-out"></i> Logout</a></li>
                        <li class="nav-item nav-hover" id='nav-admin'><a href="/admin/week1"><i class="fa fa-lg fa-cog"></i> Admin</a></li>
                    {% else %}
                        <li class="nav-item nav-hover" id='nav-login_signup'><a href="/login-signup"><i class="fa fa-lg fa-user"></i> Login/Sing-up</a></li>
                    {% endif %}
                    <li class="nav-item nav-hover"><a href="https://github.com/bitedgeco/survivor-pool/" target="_blank"><i class="fa fa-lg fa-github"></i></a></li>
                </ul>
            </div>
        </div>
    </nav><!-- End of navbar -->

    <div class="container" id="content">
        {% block body %}{% endblock %}
     </div>

    <footer class="panel-footer">
        <a href="#top"><i class="fa fa-lg fa-long-arrow-up"></i>  To the top  <i class="fa fa-lg fa-long-arrow-up"></i></a>
    </footer>

</body>
</html>
